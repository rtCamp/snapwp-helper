{
	"name": "snapwp-helper",
	"private": true,
	"author": "rtCamp",
	"devDependencies": {
		"@playwright/test": "^1.51.1",
		"@types/node": "^20.17.30",
		"@wordpress/babel-preset-default": "^8.22.0",
		"@wordpress/e2e-test-utils-playwright": "^1.22.0",
		"@wordpress/eslint-plugin": "^22.8.0",
		"@wordpress/env": "^10.22.0",
		"@wordpress/i18n": "^5.22.0",
		"@wordpress/scripts": "^30.15.0",
		"cross-env": "7.0.3",
		"npm-run-all": "^4.1.5"
	},
	"files": [
		"build",
		"src",
		"vendor",
		"LICENSE",
		"CHANGELOG.md",
		"README.md",
		"readme.txt",
		"composer.json",
		"access-functions.php",
		"activation.php",
		"snapwp-helper.php"
	],
	"scripts": {
		"build:dist": "npm-run-all --parallel build:js build:php",
		"build:js": "wp-scripts build",
		"build:php": "composer install --no-dev --no-interaction --optimize-autoloader",
		"composer:install": "composer install",
		"check-engines": "wp-scripts check-engines",
		"check-licenses": "wp-scripts check-licenses",
		"docker:build": "bash bin/build-docker.sh",
		"docker:up": "npm run docker:stop && docker compose --env-file .env up --detach",
		"docker:stop": "docker compose down --volumes",
		"docker:start": "npm run docker:build && npm run docker:up",
		"format": "wp-scripts format",
		"install-local-deps": "npm install && npm-run-all --parallel build:js composer:install",
		"install-test-env": "bash bin/install-test-env.sh",
		"lint:css": "wp-scripts lint-style",
		"lint:css:fix": "npm run lint:css -- --fix ./assets/src",
		"lint:js": "wp-scripts lint-js",
		"lint:js:fix": "npm run lint:js -- --fix ./packages",
		"lint:js:report": "npm run lint:js -- --output-file lint-js-report.json --format json .",
		"lint:md:docs": "wp-scripts lint-md-docs",
		"lint:pkg-json": "wp-scripts lint-pkg-json",
		"lint:php": "composer run-script phpcs",
		"lint:php:fix": "composer run-script phpcs:fix",
		"lint:php:stan": "composer run-script phpstan",
		"packages-update": "wp-scripts packages-update",
		"plugin-zip": "wp-scripts plugin-zip",
		"start": "wp-scripts start",
		"test:e2e": "wp-scripts test-playwright --config tests/e2e-playwright/playwright.config.ts",
		"test:e2e:ui": "wp-scripts test-playwright --config tests/e2e-playwright/playwright.config.ts --ui",
		"test:unit": "wp-scripts test-unit-js",
		"wp-env": "wp-env"
	}
}
